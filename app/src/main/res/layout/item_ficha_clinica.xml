<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="10sp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="#F1F1F1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:text="Cliente View" />

            <TextView
                android:id="@+id/txtProfesional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:gravity="left"
                android:text="Profesional View" />

            <TextView
                android:id="@+id/txtSubcategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:text="SubcategorÃ­a View" />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="Fecha View" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1F1F1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:maxWidth="110sp"
                android:text="Editar" />

<!--            <Button-->
<!--                android:id="@+id/btnCrearServicio"-->
<!--                android:layout_width="110sp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="10sp"-->
<!--                android:layout_marginEnd="10sp"-->
<!--                android:maxWidth="110sp"-->
<!--                android:text="Crear Servicio" />-->
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>