<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reservas.TurnosFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="10sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="#F1F1F1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fechaReservaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/horarioReservaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:gravity="left"
                    android:text="Hora Inicio" />

                <TextView
                    android:id="@+id/txtHoraFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:text="Hora Fin" />

                <TextView
                    android:id="@+id/fisioterapeutaReservaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="Fisioterapeuta" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F1F1F1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:maxWidth="110sp"
                    android:text="Reservar"
                    android:textSize="10sp" />

                <!--            <Button-->
                <!--                android:id="@+id/btnCrearServicio"-->
                <!--                android:layout_width="110sp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="10sp"-->
                <!--                android:layout_marginEnd="10sp"-->
                <!--                android:maxWidth="110sp"-->
                <!--                android:text="Crear Servicio" />-->
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>